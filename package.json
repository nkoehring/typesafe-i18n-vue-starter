  "devDependencies": {
    "@types/node": "^22.13.4",
    "@vitejs/plugin-vue": "^4.1.0",
    "dotenv": "^16.4.7",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vue-tsc": "^1.2.0"
  }
}
